{
  "name": "solaris-online-store",
  "version": "1.0.0",
  "description": "Solaris - Beautiful accessories online store",
  "main": "server/index.js",
  "keywords": [
    "ecommerce",
    "accessories",
    "online-store",
    "react",
    "express"
  ],
  "author": "Solaris",
  "license": "MIT",

  "scripts": {
    "install": "npm install --prefix server && npm install --prefix client && npm rebuild sqlite3 --build-from-source",
    "build": "npm run build --prefix client",
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && node index.js",
    "client": "cd client && npm start"
  },

  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6"
  },

  "devDependencies": {
    "concurrently": "^8.2.2"
  },

  "engines": {
    "node": "18.x"
  }
}
